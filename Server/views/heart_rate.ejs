<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>
        <%= title %>
    </title>
</head>

<body>
    <div class="container">
        <%- include('navbar'); %>
            <div class="card mt-3">
                <h5 class="card-header">
                    <%= title %>
                </h5>
                <div class="card-body">
                    <table>
                        <% var stt = 1;%>
                            <% benhnhan.forEach(function(tk){ %>
                                <tr>
                                    <td>Họ và tên:</td>
                                    <td>
                                        <%= tk.hoten  %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>CMND</td>
                                    <td>
                                        <%= tk.cmnd  %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Giới tính:</td>
                                    <td>
                                        <%= tk.gioitinh  %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Ngày sinh:</td>
                                    <td>
                                        <%= tk.ngaysinh.getDate()%> /
                                            <%= tk.ngaysinh.getMonth() +1%> /
                                                <%= tk.ngaysinh.getFullYear()%>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Số phòng:</td>
                                    <td>
                                        <%= tk.sophong  %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Nhịp tim:</td>
                                    <td>
                                        <%= tk.hr  %> nhịp/phút
                                    </td>
                                </tr>
                                <tr>
                                    <td>Sp02:</td>
                                    <td>
                                        <%= tk.oxi  %> %
                                    </td>
                                </tr>

                                <tr>
                                    <td>Tình trạng sức khỏe:</td>
                                    <td>
                                        <% if(tk.hr > 60 ){ %>
                                            <span class="badge bg-success">bình thường</span>

                                            <% }else{ %>
                                                <span class="badge bg-primary">thiếu oxi</span>
                                                <% } %>
                                    </td>
                                </tr>

                                <%});   %>

                    </table>

                </div>
                <%- include('footer'); %>
            </div>
    </div>
    <%- include('javascript'); %>
</body>

</html>