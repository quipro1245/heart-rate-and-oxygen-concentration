<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>
        <%= title %>
    </title>
</head>

<body>
    <div class="container">
        <%- include('navbar'); %>
            <div class="card mt-3">
                <h5 class="card-header">
                    <%= title %>
                </h5>
                <div class="card-body">
                    <a href="/taikhoan/them" class="btn btn-primary mb-2">Thêm mới</a>
                    <table class="table table-info">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên đăng nhập</th>

                                <th>Quyền</th>
                                <th colspan="2"></th>
                            </tr>
                            <% var stt = 1;%>
                                <% taikhoan.forEach(function(tk){ %>
                                    <tr>
                                        <td>
                                            <%= stt++  %>
                                        </td>
                                        <td>
                                            <%= tk.tendangnhap  %>
                                        </td>
                                        <% if(tk.quyen == 1) { %>
                                            <td>Admin</td>
                                            <% } else  { %>
                                                <% if(tk.quyen == 2) { %>
                                                    <td>Bác sĩ</td>
                                                    <% } %>
                                                        <% if(tk.quyen == 3) { %>
                                                            <td>Bệnh nhân</td>
                                                            <% } %>
                                                                <% } %>



                                                                    <td><a href="/taikhoan/sua/<%= tk.id  %>">Sửa</a></td>
                                                                    <td><a href="/taikhoan/xoa/<%= tk.id  %>">xóa</a></td>
                                    </tr>
                                    <%});   %>
                        </thead>
                    </table>
                </div>
                <%- include('footer'); %>
            </div>
    </div>
    <%- include('javascript'); %>
</body>

</html>